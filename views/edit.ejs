<%- include('partials/header') %>

<main>
    <h1>Edit Item</h1>
    <form class="update-form" action="/items/<%= item.id %>/edit" method="POST" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= item.title %>" required>


        <label for="condition">Condition:</label>
        <select id="condition" name="condition" required>
            <% conditionOptions.forEach(option => { %>
                <option value="<%= option %>" <%= item.condition === option ? 'selected' : '' %>><%= option %></option>
            <% }); %>
        </select>


        <label for="category">Category:</label>
        <select id="category" name="category" required>
            <% categoryOptions.forEach(option => { %>
                <option value="<%= option %>" <%= item.category === option ? 'selected' : '' %>><%= option %></option>
            <% }); %>
        </select>
        

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" step="0.01" value="<%= item.price %>" required>

        <label for="info">Details:</label>
        <textarea id="info" name="details" required minlength="10"><%= item.details %></textarea>

        <label for="image">Image:</label>
        <input type="file" id="image" name="image">

        <button type="submit">Update Item</button>
    </form>
</main>

<%- include('partials/footer') %>
